<!--Button needed class="profile-create-btn"-->
<div class="home-container">
  <section class="hero is-primary is-medium">
    <div class="hero-head">
      <nav class="navbar">
        <div class="container">
          <div class="navbar-brand">
            <a class="navbar-item">
              <img
                src="https://bulma.io/images/bulma-type-white.png"
                alt="Logo"
              />
            </a>
            <span class="navbar-burger" data-target="navbarMenuHeroA">
              <span></span>
              <span></span>
              <span></span>
            </span>
          </div>
          <div id="navbarMenuHeroA" class="navbar-menu">
            <div class="navbar-end">
              <a class="navbar-item is-active">
                My Goals
              </a>
              <a class="navbar-item">
                Login
              </a>
              <a class="navbar-item">
                Logout
              </a>
              <span class="navbar-item">
                <a class="button is-primary is-inverted">
                  <span class="icon">
                    <i class="fab fa-github"></i>
                  </span>
                  <span></span>
                </a>
              </span>
            </div>
          </div>
        </div>
      </nav>
    </div>
    <a href="/create" class="profile-create-btn">Create New Goal</a>
    <!-- Hero content: will be in the middle -->
    <!--Button needed in each container class ="profile-edit-btn"-->

    {{#each goals as |goal|}}
    <div id="goalsList" class="hero-body">
      <div class="container has-text-centered">
        <p class="title">
          {{goal.title}}
        </p>
        <p class="subtitle">
          {{goal.description}}
        </p>
        <button class="deleteGoalBtn" data-id="{{goal.id}}">Goal Completed</button>
        {{else}}
        <p class="empty">No Goals Yet</p>
      </div>
    </div>
    {{/each}}

<script src="./js/profile.js"></script>